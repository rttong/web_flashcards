<div class="game">
  <% @deck.cards.each do |card| %>
    <div class="card" style="display:none">
      <%= card.question %>
      <form class='guess' action="/decks/<%= @deck.id %>/<%= card.id %>" method='post'>
        <label for='guess'>
        <input type="text" name='guess'>
        </label>

        <input type='submit' value='Submit'>
      </form>
    </div>
  <% end %>
</div>
  <%= session[:user_id] %>

